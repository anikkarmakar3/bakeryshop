<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/billing1"
    tools:context=".BillingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Bill"
        android:text="Billing Address"
        android:textColor="@color/red"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/address"
        android:layout_below="@+id/Bill"
        android:background="#CCFFFFFF"
        android:hint="Full Address"
        android:drawableLeft="@drawable/ic_baseline_add_location_alt_24"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:layout_below="@+id/address"
        android:background="#CCFFFFFF"
        android:hint="Order Quantity"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pincode"
        android:layout_below="@+id/quantity"
        android:background="#CCFFFFFF"
        android:hint="Pin Code"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_below="@+id/pincode"
        android:background="#CCFFFFFF"
        android:hint="Phone Number"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/billemail"
        android:layout_below="@+id/phone"
        android:background="#CCFFFFFF"
        android:hint="Email Address"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width = "200dp"
        android:layout_height = "wrap_content"
        android:id = "@+id/payment"
        android:text = "Save Address"
        android:textColor="@color/red"
        android:layout_below="@+id/billemail"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:onClick="savebill"
        />
</RelativeLayout>